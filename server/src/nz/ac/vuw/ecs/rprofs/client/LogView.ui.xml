<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="nz.ac.vuw.ecs.rprofs.client.LogView.Style">
		.filters {
			background-color: #ddd;
			border-bottom: solid 1px #ccc;
			padding: 0.5ex 1em;
			height: 3ex;
		}
		.content {
			position: absolute;
			top: 4ex;
			bottom: 0;
			left: 0;
			right: 0;
			overflow: auto;
		}
		.filters .checkbox {
			display: inline-block;
			margin: 0.25ex 0.25em;
			float: right;
		}
		.filters input, .filters button {
			margin: 0 0.25em;
			float: right;
		}
		.filters input {
			text-align: right;
			width: 3em;
		}
		.filters .checkbox input {
			margin: 0.5ex 0;
		}
		.filter {
			display: inline-block;
			text-decoration: none;
			color: inherit;
			outline: none;
			padding: 0.25ex 0.5em;
			border-radius: 1em;
			margin: 0.25ex 0.25em;
		}
		.active {
			background-color: #999;
			color: #eee;
		}
		.objectAllocated .objectAllocated, .classWeave .classWeave,
		.fieldWrite .fieldWrite, .fieldRead .fieldRead,
		.methodEnter .methodEnter, .methodReturn .methodReturn,
		.methodException .methodException,
		.classInitialized .classInitialized, .objectTagged .objectTagged,
		.objectFreed .objectFreed {
			display: none;
		}
	</ui:style>
	<g:FlowPanel>
		<g:FlowPanel ui:field="filters" styleName="{style.filters}"></g:FlowPanel>
		<g:FlowPanel ui:field="content" styleName="{style.content}"></g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 