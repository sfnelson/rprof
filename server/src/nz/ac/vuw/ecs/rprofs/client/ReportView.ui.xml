<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:nz.ac.vuw.ecs.rprofs.client">
	<ui:style type="nz.ac.vuw.ecs.rprofs.client.ReportView.Style">
	.panel {}
	.background {
		position: absolute;
		width: 100%;
		height: 100%;
		color: transparent;
		z-index: -1;
	}
	.background span {
		height: 100%;
		padding-top: 0;
		padding-bottom: 0;
	}
	.heading {
		background-color: #ddd;
		border-bottom: solid 1px #ccc;
	}
	.heading span {
		padding-top: 0.5ex;
		padding-bottom: 0.5ex;
		border-color: #bbb;
	}
	.even {
		background-color: #eef;
	}
	.container {
		position: absolute;
		top: 3.5ex;
		bottom: 0;
		left: 0;
		right: 0;
		overflow: auto;
	}
	</ui:style>
	<g:FlowPanel styleName="{style.panel}">
		<p:Entry ui:field="background" styleName="{style.background}"></p:Entry>
		<p:Entry ui:field="heading" styleName="{style.heading}"></p:Entry>
		<g:FlowPanel ui:field="container" styleName="{style.container} list">
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 