<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.wrapper {
			position: absolute;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			background-color: rgba(0, 0, 0, 0.5);
		}
		.container {
			position: relative;
			width: 30em;
			height: 6em;
			margin: 0 auto;
			top: 50%;
			margin-top: -4em;
			padding: 1em 2em;
			border-color: #444;
			background-color: white;
			color: black;
		}
		.message {
			text-align: center;
			height: 4ex;
			margin: 1em 0;
		}
		.bar {
			border: solid 1px black;
			margin: 2ex 0 0 0;
			\-moz-border-radius: 2px;
			border-radius: 2px;
			position: relative;
			height: 3.5ex;
		}
		.meter {
			position: absolute;
			background-color: #ddd;
			height: 100%;
			left: 0;
		}
		.progress {
			position: absolute;
			left: 0;
			right: 0;
			top: 0;
			bottom: 0;
			padding: 0.5ex 0;
			text-align: center;
			height: 2.5ex;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.wrapper}">
		<g:FlowPanel styleName="{style.container}">
			<g:HTML styleName="{style.message}" ui:field="message"></g:HTML>
			<g:FlowPanel styleName="{style.bar}">
				<g:FlowPanel styleName="{style.meter}" ui:field="meter"></g:FlowPanel>
				<g:HTML styleName="{style.progress}" ui:field="progress"></g:HTML>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 