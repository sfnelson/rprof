<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .panel {
        }

        .background span, .background div {
            height: 100%;
            padding-top: 0;
            padding-bottom: 0;
        }

        .heading span {
            padding-top: 0.5ex;
            padding-bottom: 0.5ex;
            border-color: #bbb;
            text-align: left;
        }

        .container {
            position: absolute;
            top: 1px;
            bottom: 0;
            left: 0;
            right: 0;
            overflow: auto;
        }
    </ui:style>
    <g:FlowPanel styleName="{style.panel}">
        <g:FlowPanel ui:field="children" styleName="{style.container} list">
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 