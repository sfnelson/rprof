<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:r="urn:import:nz.ac.vuw.ecs.rprofs.client.ui">
	<ui:style type="nz.ac.vuw.ecs.rprofs.client.views.impl.ReportManagerPanel.Style">
		.menu {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4ex;
			background-color: #777;
			overflow: hidden;
		}
		.content {
			position: absolute;
			top: 4ex;
			left: 0;
			right: 0;
			bottom: 0;
			overflow: auto;
			padding: 0;
		}
		.closed .content {
			top: 4ex;
		}
		.menuWrapper {
			position: absolute;
			top: 0;
			bottom: 1px;
			left: 0;
			right: 0;
			border-bottom: solid 1px #ccc;
			background-color: #bbb;
			padding-left: 0.5em;
		}
		.button {
			height: 100%;
			border: none;
			background-color: transparent;
			padding: 0 1em 0 1.2em;
			margin: 0 0.5em;
			line-height: 4ex;
			border-left: solid 1px transparent;
			border-right: solid 1px transparent;
			display: inline-block;
			color: black;
			text-decoration: none;
		}
		.button:hover {
			text-decoration: none;
		}
		.selected {
			border-left-color: #777;
			border-right-color: #777;
			background-color: #aaa;
		}
		.hidden {
			display: none;
		}
		.closeButton span {
			display: block;
			\-webkit-transform: rotate(90deg);
			\-moz-transform: rotate(90deg);
			font-size: 1.2em;
		}
	</ui:style>
	<g:HTMLPanel ui:field='panel'>
		<div class='{style.menu}'>
			<g:FlowPanel styleName='{style.menuWrapper}' ui:field='menu'></g:FlowPanel>
			<r:UIButton addStyleNames='{style.closeButton}' ui:field='close'>
				<span>&laquo;</span>
			</r:UIButton>
		</div>
		<g:SimplePanel ui:field='content' styleName='{style.content}'></g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 